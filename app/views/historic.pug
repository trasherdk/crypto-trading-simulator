extends layouts/default
block head
  - var title = 'Historique - CTS';
  include includes/head

block content
    div.row.justify-content-center.mt-5
      div.col-sm-12.col-md-10
        div.card.bg-dark.text-white
          div.card-header
            h2.m-0 Historique de mes transactions
          div.card-body
            div.row
              div.col-12
                table.table.table-striped.table-bordered.table-dark.table-hover
                  thead
                    tr
                      th Nom
                      th Valeur achet√©
                      th Valeur en euros
                      th date
                  tbody
                    each trade in trading
                      tr
                        th.align-middle #{trade.dst_currency}
                        th.align-middle #{trade.dst_value}
                        th.align-middle #{trade.src_value} #{trade.src_currency}
                        th.align-middle #{trade.date}