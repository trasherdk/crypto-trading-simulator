extends layouts/default
block head
  - var title = 'Portefeuille - CTS';
  include includes/head

block content
  div.row.justify-content-md-center.mt-5
    div.col-4
      each wallet in data
        div.card.text-white.bg-dark.col-sm
          div.card-header
            h5 Mon portefeuille CTS
          div.card-body
            div.row
              p Valeur estimée de mes placements en BTC :
            div.row
              h4 #{wallet.cryptoBalance} €
          div.card-footer.text-muted.text-right Mise à jour : #{wallet.time}.

    div.col-4
      each wallet in data
        div.card.text-white.bg-dark.col-sm
          div.card-header
            h5 Mon solde
          div.card-body
            div.row
              div.col-4.d-flex
                h4.m-0.align-self-center #{wallet.balance} €
              div.col-8
                a.btn.btn-success.mr-4 Recharger mon compte
                a.btn.btn-success Retrait
          div.card-footer.text-muted.text-right Mise à jour : #{wallet.time}.

  div.row.justify-content-md-center.mt-5
    div.col-8
      div.card.text-white.bg-dark.col-sm
        div.card-header
          h5 Historique de mes transactions
        div.card-body
          div.row
            div.col-12
              table.table.table-striped.table-bordered.table-dark
                thead
                  tr
                    th Nom
                    th Valeur acheté
                    th Valeur en euros
                    th ID de la transaction
                    th date
                tbody
                  each wallet in data
                    tr
                      th.align-middle #{wallet.cryptoName}
                      th.align-middle #{wallet.cryptoBoughtValue}
                      th.align-middle #{wallet.moneySpent} €
                      th.align-middle #{wallet.transactionId}
                      th.align-middle #{wallet.transactionDate}

